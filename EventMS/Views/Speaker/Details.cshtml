@model Speaker

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Speaker Details</h2>

    <div class="card shadow-sm p-4">
        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <div class="mb-3 text-center">
                <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px; height: auto;" />
            </div>
        }

        <div class="mb-3">
            <label class="fw-bold">Name:</label>
            <span>@Model.Name</span>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Bio:</label>
            <span>@Model.Bio</span>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Contact Info:</label>
            <span>@Model.ContactInfo</span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
