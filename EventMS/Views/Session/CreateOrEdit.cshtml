@model Session

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        @(Model.Id == 0 ? "Create Session" : "Edit Session")
    </h2>

    <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter session title" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Speaker" class="form-label fw-semibold"></label>
            <input asp-for="Speaker" class="form-control" placeholder="Enter speaker name" />
            <span asp-validation-for="Speaker" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartTime" class="form-label fw-semibold"></label>
            <input asp-for="StartTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndTime" class="form-label fw-semibold"></label>
            <input asp-for="EndTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label fw-semibold"></label>
            <input asp-for="Location" class="form-control" placeholder="Enter location" />
            <span asp-validation-for="Location" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}