@model List<Speaker
>
<div class="container mt-4">
    <h2 class="mb-4 text-primary">Speakers List</h2>

    <div class="mb-3">
        <a asp-action="CreateOrEdit" class="btn btn-success">Add New Speaker</a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Photo</th>
                <th>Name</th>
                <th>Bio</th>
                <th>Contact Info</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl" alt="@item.Name" class="img-thumbnail" style="max-width: 80px; height: auto;" />
                        }
                        else
                        {
                            <span class="text-muted">No Photo</span>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Bio</td>
                    <td>@item.ContactInfo</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this speaker?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
