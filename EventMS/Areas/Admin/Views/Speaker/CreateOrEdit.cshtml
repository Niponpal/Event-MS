@model Speaker

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        @(Model.Id == 0 ? "Add New Speaker" : "Edit Speaker")
    </h2>

    <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter speaker name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label fw-semibold"></label>
            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Enter speaker bio"></textarea>
            <span asp-validation-for="Bio" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactInfo" class="form-label fw-semibold"></label>
            <input asp-for="ContactInfo" class="form-control" placeholder="Enter contact info" />
            <span asp-validation-for="ContactInfo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhotoUrl" class="form-label fw-semibold"></label>
            <input asp-for="PhotoUrl" class="form-control" placeholder="Enter photo URL" />
            <span asp-validation-for="PhotoUrl" class="text-danger small"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <div class="mb-3">
                <label class="form-label fw-semibold">Preview:</label><br />
                <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-thumbnail" style="max-width:150px;" />
            </div>
        }

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
