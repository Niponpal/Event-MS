@model Event

<div class="card shadow-sm my-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Create or Edit Event</h4>
    </div>

    <div class="card-body">
        <form asp-action="CreateOrEdit" asp-controller="Event" method="post" class="needs-validation" novalidate>

            <div class="form-floating mb-3">
                <input asp-for="Title" type="text" class="form-control" id="TitleInput" placeholder="Event Title" />
                <label for="TitleInput">Event Title</label>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="Write a brief description" id="DescriptionInput" style="height: 100px;"></textarea>
                <label for="DescriptionInput">Description</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Location" type="text" class="form-control" id="LocationInput" placeholder="Event location or venue" />
                <label for="LocationInput">Location</label>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6 form-floating">
                    <input asp-for="StartDate" type="datetime-local" class="form-control" id="StartDateInput" />
                    <label for="StartDateInput">Start Date & Time</label>
                </div>
                <div class="col-md-6 form-floating">
                    <input asp-for="EndDate" type="datetime-local" class="form-control" id="EndDateInput" />
                    <label for="EndDateInput">End Date & Time</label>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Category" type="text" class="form-control" id="CategoryInput" placeholder="Event category (e.g. Workshop, Seminar)" />
                <label for="CategoryInput">Category</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="MaxAttendees" type="number" min="1" class="form-control" id="MaxAttendeesInput" placeholder="Number of attendees" />
                <label for="MaxAttendeesInput">Maximum Attendees</label>
                
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success px-5 fw-semibold shadow-sm">
                    <i class="bi bi-check-circle me-2"></i> Save Event
                </button>
            </div>
        </form>
    </div>
</div>
